{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Express",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "--loader",
        "ts-node/esm",
        "--experimental-specifier-resolution=node",
        "${workspaceFolder}/src/server.js"
      ],
      "cwd": "${workspaceFolder}",
      "protocol": "inspector",
      "skipFiles": ["<node_internals>/**/*.js"],
      "console": "integratedTerminal"
    }
  ]
}
